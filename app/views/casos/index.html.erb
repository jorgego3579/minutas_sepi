<h1>Casos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Primer Apellido</th>
      <th>Segundo Apellido</th>
      <th>Boleta</th>
      <th>Tipo caso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @casos.each do |caso| %>
      <tr>
        <td><%= caso.user.nombre %></td>
        <td><%= caso.user.primer_apellido %></td>
        <td><%= caso.user.segundo_apellido %></td>
        <td><%= Alumno.find_by(user_id: caso.user.id).boleta %></td>
        <td><%= caso.tipo_caso.nombre %></td>
        <td><%= link_to 'Show', caso %></td>
        <td><%= link_to 'Edit', edit_caso_path(caso) %></td>
        <td><%= link_to 'Destroy', caso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

