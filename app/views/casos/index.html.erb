<h1>Casos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Primer Apellido</th>
      <th>Segundo Apellido</th>
      <th>Boleta</th>
      <th>Tipo caso</th>
      <th>Validación cuerpo académico</th>
      <th>Validación asuntos escolares</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @casos.each do |caso| %>
      <tr>
        <td><%= caso.alumno.user.nombre %></td>
        <td><%= caso.alumno.user.primer_apellido %></td>
        <td><%= caso.alumno.user.segundo_apellido %></td>
        <td><%= caso.alumno.boleta %></td>
        <td><%= caso.tipo_caso.nombre %></td>
        <% if caso.validacion_cuerpo_academico == true %>
        <td class="table-success"><%= caso.validacion_cuerpo_academico ? 'Si' : 'No' %></td>
        <% else %>
        <td class="table-warning"><%= caso.validacion_cuerpo_academico ? 'Si' : 'No' %></td>
        <% end %>
        <% if caso.validacion_asuntos_escolares == true %>
        <td class="table-success"><%= caso.validacion_asuntos_escolares ? 'Si' : 'No' %></td>
        <% else %>
        <td class="table-warning"><%= caso.validacion_asuntos_escolares ? 'Si' : 'No' %></td>
        <% end %>
        <td><%= link_to 'Mostrar', caso %></td>
        <td><%= link_to 'Editar', edit_caso_path(caso) %></td>
        <td><%= link_to 'Eliminar', caso, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Caso', new_caso_path %>
