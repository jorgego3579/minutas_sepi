<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="card">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col-8">
          <h3 class="mb-0">Registro</h3>
        </div>
      </div>
    </div>
    <div class="card-body">
        <div class="pl-lg-4">
          <div class="row">
            <div class="form-group col-sm-4">
              <%= f.label :nombre, 'Nombre(s)' %>
              <%= f.text_field :nombre, autofocus: true, class:'form-control', required: true %>
            </div>
            <div class="form-group col-sm-4">
              <%= f.label :primer_apellido, 'Primer apellido' %>
              <%= f.text_field :primer_apellido, class:'form-control', required: true %>
            </div>
            <div class="form-group col-sm-4">
              <%= f.label :segundo_apellido, 'Segundo apellido' %>
              <%= f.text_field :segundo_apellido, class:'form-control', required: true %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email", class:'form-control' %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.label :curp, 'CURP' %> <strong><%= link_to '¿No conoce su CURP?', 'http://consultas.curp.gob.mx', html_options = {target: '_blank'} %></strong>
              <%= f.text_field :curp, class:'form-control', style: 'text-transform:uppercase', maxlength: 18, required: true %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-4">
              <%= f.label :password, 'Contraseña' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres como m&iacute;nimo)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
            </div>
            <div class="form-group col-md-4">
              <%= f.label :password_confirmation, 'Confirmar contraseña' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-3">
              <%= f.submit "Registrarse", class:'btn btn-md btn-primary' %>
            </div>
          </div>
        </div>
    </div>
  </div>
  <% end %>
  <strong><%= link_to 'Regresar', root_path %></strong>
  <script>
  $(document).ready(function(){
      $('#curp').keyup(function(){
          $(this).val($(this).val().toUpperCase());
      });
  });
  </script>
