<h1>Registros de director de tesis</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Primer Apellido</th>
      <th>Segundo Apellido</th>
      <th>Boleta</th>
      <th>Nombre del Director</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @director_tesis_registros.each do |director_tesis_registro| %>
      <tr>
        <td><%= director_tesis_registro.caso.alumno.user.nombre %></td>
        <td><%= director_tesis_registro.caso.alumno.user.primer_apellido %></td>
        <td><%= director_tesis_registro.caso.alumno.user.segundo_apellido %></td>
        <td><%= director_tesis_registro.caso.alumno.boleta %></td>
        <td><%= director_tesis_registro.nombre %></td>
        <td><%= link_to 'Show', director_tesis_registro %></td>
        <td><%= link_to 'Edit', edit_director_tesis_registro_path(director_tesis_registro) %></td>
        <td><%= link_to 'Destroy', director_tesis_registro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

